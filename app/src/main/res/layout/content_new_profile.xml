                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_textview_title"
                android:text="@string/title_alarm_volume" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_seek"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_textview_desc"
                android:layout_weight="0.97"
                android:text="@string/title_alarm_volume_disc" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chkAlarmVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_weight="0.03"
                android:checked="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_seek"
            android:orientation="horizontal"
            android:weightSum="1">

            <SeekBar
                android:id="@+id/seekBarAlarmVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.90" />

            <TextView
                android:id="@+id/txtViewAlarmVolume"
