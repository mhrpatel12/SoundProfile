<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin"
    tools:context="com.appontherocks.soundprofile.fragments.SleepyHoursFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutStartHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fab_margin">

            <android.support.v7.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_sleep"
                android:text="@string/text_start_time" />

            <TimePicker
                android:id="@+id/startTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:headerBackground="?attr/card_view_title_text_color"
                android:numbersTextColor="?attr/card_view_back_color"
                android:padding="@dimen/padding_time_picker" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEndHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fab_margin">

            <android.support.v7.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_wake_up"
                android:text="@string/text_end_time" />

            <TimePicker
                android:id="@+id/endTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:headerBackground="?attr/card_view_title_text_color"
                android:numbersTextColor="?attr/card_view_back_color"
                android:padding="@dimen/padding_time_picker" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnEnableSleepyHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_background_button"
            android:text="@string/text_button_sleepy_hours" />

    </LinearLayout>
</ScrollView>